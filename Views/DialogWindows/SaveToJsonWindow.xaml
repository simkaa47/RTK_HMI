<Window x:Class="RTK_HMI.Views.DialogWindows.SaveToJsonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTK_HMI.Views.DialogWindows"
        mc:Ignorable="d"
        Title="SaveToJsonWindow" Height="120" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите имя файла"/>
            <TextBox Name="Path"/>
            <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
                <Button IsCancel="True" MinWidth="60">Отмена</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
